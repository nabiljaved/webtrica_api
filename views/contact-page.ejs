<style>

    .dashboard_main_wrapper{
        
            padding: 50px;
        }
        
        </style>


        <div class="dashboard_main_wrapper">


            <h1 class="lead">Contact Page</h1>

            <form action="/add-package" enctype="multipart/form-data" method="post" id="form">
            
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name">
                  </div>

                     <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address">
                  </div>

                  <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="text" class="form-control" id="phone">
                  </div>
            
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
    
        </div>

        <script>


var form = document.querySelector('#form');
form.addEventListener('submit', addPromotion);
            
       function addPromotion(e){
        e.preventDefault();
     
        
        const name = document.getElementById('name').value;
        const address = document.getElementById('address').value;
        const phone = document.getElementById('phone').value;
        
        if(name === '' || address === '' || phone === ''){
            UI.showAlert("please fill all fields", 'danger')
            return;
        }
        

        var data = {
            
             "name": name,
             "address" : address,
             "phone": phone,
        }
        
        console.log([name, address,phone])

        fetch('http://localhost:5000/admin-dashboard/add-contact', {
        method: 'post',
        body: JSON.stringify(data),
        headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json',
        "Access-Control-Allow-Origin": "http://localhost:5000/admin-dashboard/add-contact"
      }
       }).then(function(response) {
       return response.json();
       }).then(function(data) {
            if(data){
                //console.log(data)  
                //location.reload() 
                UI.showAlert("contact is addedd success fully", 'success')
                UI.emptyFields();
            }
      });  

    }

class UI{

static showAlert(message, className) {
const div = document.createElement('div');
div.className = `alert alert-${className}`;
div.appendChild(document.createTextNode(message));
const container = document.querySelector('.dashboard_main_wrapper');
const form = document.querySelector('#form');
container.insertBefore(div, form);

// Vanish in 3 seconds
setTimeout(() => document.querySelector('.alert').remove(), 3000);
}


static emptyFields()
{
  const name = document.getElementById('name').value = '';
  const address = document.getElementById('address').value = '';
  const phone = document.getElementById('phone').value = '';
        
}

}


        </script>